[train]
epoch = 3
batch_size = 170
shuffle = True
valid_interval = 1
save_strategy = save_best

[test]
batch_size = 1
shuffle = False

[data]
reader_name = LevenReader
formatter_name = DmcnnFormatter
word2vec_file = sgns.wiki.bigram-char
split_labels = True

[model]
model_name = Dmcnn
pf_dim = 5
llf_num = 3
kernel_size = 3
hidden_size = 200
dropout = 0.5

[optimizer]
optimizer_name = Adam
lr = 1e-3
weight_decay = 1e-8
